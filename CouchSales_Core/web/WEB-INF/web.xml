<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CouchDBServlet</servlet-name>
        <servlet-class>com.couchsales.core.CouchDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SQLServerServlet</servlet-name>
        <servlet-class>com.couchsales.core.SQLServerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogServlet</servlet-name>
        <servlet-class>com.couchsales.core.CatalogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateItemServlet</servlet-name>
        <servlet-class>com.couchsales.core.CreateItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CouchDBServlet</servlet-name>
        <url-pattern>/CouchDBServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SQLServerServlet</servlet-name>
        <url-pattern>/SQLServerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogServlet</servlet-name>
        <url-pattern>/CatalogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateItemServlet</servlet-name>
        <url-pattern>/CreateItemServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
